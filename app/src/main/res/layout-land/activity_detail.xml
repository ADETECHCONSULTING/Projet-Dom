<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jean.test.vue.DetailActivity">

    <ImageView
        android:layout_width="365dp"
        android:layout_height="371dp"
        app:srcCompat="@drawable/ic_home"
        android:id="@+id/idImgDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idCityDetail"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/idImgDetail"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idPrixDetail"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toRightOf="@+id/idCityDetail"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:id="@+id/idContentDetail"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/idImgDetail"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/idCityDetail" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgPartenaire"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="152dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ensavoirpluslast"
        android:id="@+id/idPlus"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/idImgDetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imgPartenaire"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
