<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:id="@+id/textInputLayout9"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6">

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"

            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"

        android:layout_width="200dp"
        android:id="@+id/textInputLayout5"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout9"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout9">

        <EditText
            android:id="@+id/registerName"
            android:layout_width="match_parent"
            android:lines="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nom"

            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"

        android:layout_width="200dp"
        android:id="@+id/textInputLayout3"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout5"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

        <EditText
            android:id="@+id/registerPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:hint="Prenom"

            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"

        android:layout_width="200dp"
        android:id="@+id/textInputLayout4"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout3"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <EditText
            android:id="@+id/registerPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Mot de passe"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"

        android:layout_weight="0.27"
        android:layout_width="200dp"
        android:id="@+id/textInputLayout7"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout4"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout4"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/registerPwConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirmer le mot de passe"

            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="S'inscrire"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnInscription"
        android:textColor="@color/White"
        android:background="@drawable/roundcorner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/labelDejaInscrit"
        android:text="@string/dejaInscrit"
        android:textAlignment="viewStart"
        android:textColor="@color/Azure"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInscription" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="203dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.3080425" />

    <ImageView
        android:layout_width="350dp"
        app:srcCompat="@drawable/logoecriture"
        android:id="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_height="212dp" />
</android.support.constraint.ConstraintLayout>
</FrameLayout>
