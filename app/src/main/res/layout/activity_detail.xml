<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jean.test.vue.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/ic_home"
            android:id="@+id/idImgDetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:text="Ville"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idCityDetail"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/idImgDetail" />

        <TextView
            android:text="Prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPrixDetail"
            android:layout_marginStart="70dp"
            app:layout_constraintLeft_toRightOf="@+id/idCityDetail"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toTopOf="@+id/idCityDetail"
            app:layout_constraintBottom_toBottomOf="@+id/idCityDetail"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />

        <TextView
            android:text="0 mÂ², 0 place, chambre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idDetailPiece"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/idCityDetail"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />

        <TextView
            android:text="@string/hello_blank_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idContentDetail"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/idDetailPiece"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp" />

        <Button
            android:text="Cliquez pour en savoir plus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/idPlus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/idContentDetail"
            style="@style/Widget.AppCompat.Button"
            android:backgroundTint="@color/BlueDomoumDark"
            android:textColor="@android:color/white" />

        <TextView
            android:text="@string/En_savoir_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idTextPlus"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/idContentDetail"
            android:textColor="@color/BlueDomoumDark" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
