<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/loginLayout">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="16dp"
        android:id="@+id/textInputLayout2"
        android:layout_width="200dp">

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"

            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:id="@+id/textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        android:layout_width="200dp">

        <EditText
            android:id="@+id/loginPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Mot de passe"
            android:textSize="15sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Se connecter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnexion"
        android:textColor="@color/Azure"
        android:background="@color/BlueDomoumDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <ImageView
        android:layout_width="71dp"
        android:layout_height="42dp"
        app:srcCompat="@drawable/account_circle_white_96x96"
        android:id="@+id/imageView"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/btnConnexion"
        app:layout_constraintLeft_toLeftOf="@+id/btnConnexion"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.65999997" />

    <TextView
        android:text="S'inscrire ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRegister"
        android:textColor="@color/Azure"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="235dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.3566009" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="237dp"
        app:srcCompat="@drawable/logoecriture"
        android:id="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
</FrameLayout>